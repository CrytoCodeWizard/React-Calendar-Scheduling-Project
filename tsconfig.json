{
  "include": ["./*.ts", "./cypress/**/*.ts"],
  "exclude": ["node_modules/**", "dist/**", "cypress.config.js"],
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "module": "ESNext",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["cypress"]
  }
}
